---

<MainLayout title="Services - Adrian Birsan" description="Explore our range of digital services">
  <div class="services-wrapper">
    <header class="page-header">
      <h1>Services</h1>
      <p class="subtitle">Transforming Ideas into Digital Reality</p>
    </header>

    <div class="services-grid">
      {services.map((service) => (
        <div class="service-item">
          <div class="service-content">
            <div class="service-icon">{service.icon}</div>
            <div class="service-details">
              <h2>{service.title}</h2>
              <p>{service.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</MainLayout>

<style>
.services-wrapper {
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.page-header {
  text-align: center;
  margin-bottom: 3rem;
}

h1 {
  font-size: 3rem;
  color: #ff8c00;
  margin-bottom: 1rem;
}

.subtitle {
  color: #bdbdbd;
  font-size: 1.2rem;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.service-item {
  background: #1a1a1a;
  border: 1px solid #333;
  border-radius: 12px;
  overflow: hidden;
  transition: transform 0.3s ease, border-color 0.3s ease;
}

.service-item:hover {
  border-color: #ff8c00;
  transform: translateY(-2px);
}

.service-content {
  display: flex;
  flex-direction: column;
  padding: 2rem;
  gap: 1.5rem;
  align-items: flex-start;
}

.service-icon {
  font-size: 2.5rem;
  min-width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1a1a1a;
  border: 1px solid #333;
  border-radius: 12px;
}

.service-details h2 {
  color: #e0e0e0;
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
}

.service-details p {
  color: #bdbdbd;
  line-height: 1.6;
}

@media (max-width: 1200px) {
  .services-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .services-grid {
    grid-template-columns: 1fr;
  }

  .services-wrapper {
    padding: 1rem;
  }

  .service-content {
    align-items: center;
    text-align: center;
  }
}
</style>
