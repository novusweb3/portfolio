---
import MainLayout from '../layouts/MainLayout.astro';

const services = [
  {
    title: 'AI Consulting',
    description: 'Transform your business with cutting-edge AI solutions. Strategic guidance for implementation and optimization.',
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
            <line x1="12" y1="22.08" x2="12" y2="12"/>
           </svg>`
  },
  {
    title: 'Bot Creation',
    description: 'Custom AI-powered chatbots and automation solutions. Enhance customer experience and operational efficiency.',
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
            <line x1="9" y1="9" x2="9.01" y2="9"/>
            <line x1="15" y1="9" x2="15.01" y2="9"/>
           </svg>`
  },
  {
    title: 'SaaS Development',
    description: 'End-to-end development of scalable software solutions. From concept to deployment and maintenance.',
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"/>
           </svg>`
  }
];
---

<MainLayout title="Adrian Birsan - AI & Software Development" description="Transform your business with cutting-edge AI solutions and custom software development">
  <main class="home-container">
    <section class="hero">
      <div class="content-grid">
        <div class="text-content">
          <h1 class="title">
            <span class="title-segment dream-it">Dream It,</span>
            <span class="title-segment build-it">Build It,</span>
            <span class="title-segment celebrate-it">Celebrate It!</span>

          </h1>
          <p class="subtitle">
            Remember that idea you've been dreaming about? Why not turn it into reality this year? 
			Start today, and by December 31st, you won't just be setting resolutions; 
			you'll be celebrating achievements!
          </p>
          <div class="cta-container">
            <a href="/contact" class="cta-primary">Start Your Project</a>
            <a href="/portfolio" class="cta-secondary">View Portfolio</a>
          </div>
        </div>
        <div class="form-content">
          <h2 class="form-title">I Have an Idea...</h2>
          <form class="idea-form">
            <input type="text" placeholder="Your Name" class="form-input" required />
            <input type="email" placeholder="Your Email" class="form-input" required />
            <textarea placeholder="Your Message" class="form-textarea" required></textarea>
            <button type="submit" class="form-button">Submit</button>
          </form>
        </div>
      </div>
    </section>

    <section class="services">
      <h2 class="section-title"></h2>
      <div class="services-grid">
        {services.map(service => (
          <div class="service-card">
            <div class="service-icon" set:html={service.icon} />
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="tech-stack">
 
      <div class="tech-banner">
        <div class="banner-track">
          <div class="banner-content">
            <div class="tech-item">
              <img src="/logos/react.png" alt="React" width="150" height="70" />
            </div>
            <div class="tech-item">
              <img src="/logos/nodejs.png" alt="Node.js" width="150" height="70" />
            </div>
            <div class="tech-item">
              <img src="/logos/nextjs.png" alt="Next.js" width="150" height="70" />
            </div>
            <div class="tech-item">
              <img src="/logos/astrojs.png" alt="Astro" width="150" height="70" />
            </div>
            <div class="tech-item">
              <img src="/logos/aws.png" alt="AWS" width="150" height="70" />
            </div>
            <div class="tech-item">
              <img src="/logos/azure.png" alt="Azure" width="150" height="70" />
            </div>
            <div class="tech-item">
              <img src="/logos/vercel.png" alt="Vercel" width="150" height="70" />
            </div>
            <div class="tech-item">
              <img src="/logos/github.png" alt="Github" width="150" height="70" />
            </div>
            <div class="tech-item">
				<img src="/logos/openai.png" alt="Open AI" width="150" height="70" />
			  </div>
			</div>
          <!-- Duplicate for seamless loop -->
          <div class="banner-content" aria-hidden="true">
            <!-- Same content repeated -->
          </div>
        </div>
      </div>
    </section>

    </div>
  </main>
</MainLayout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;600&display=swap');

  /* Global background color */
  :root {
    background-color: #1a1a1a;
  }

  body {
    background-color: #1a1a1a;
  }

  /* Main content wrapper */
  main, 
  .main-content,
  .content-wrapper {
    background-color: #1a1a1a;
  }

  /* Hero section */
  .hero {
    position: relative;
    min-height: auto;
    padding: 2rem;
    display: flex;
    align-items: flex-start;
    overflow: hidden;
    background-color: #1a1a1a;
    color: #333;
    font-family: 'Orbitron', sans-serif;
  }

  .content-grid {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    width: 100%;
    margin-top: 6rem;
    margin-left: 2rem;
    z-index: 1;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .title {
    font-size: 3.5rem;
    font-weight: 600;
    line-height: 1.2;
    font-family: 'Space Grotesk', sans-serif;
  }

  .title-segment {
    color: #e0e0e0;
    display: inline-block;
  }

  .dream-it { opacity: 0.3; }  /* 70% overlay = 0.3 opacity */
  .build-it { opacity: 0.6; }  /* 40% overlay = 0.6 opacity */
  .celebrate-it { opacity: 1; } /* no overlay */

  .highlight {
    display: block;
    margin-top: 1rem;
  }

  .new-year { opacity: 0.5; }  /* 50% overlay */
  .new-project { opacity: 1; } /* no overlay */

  .subtitle {
    font-size: 1.25rem;
    color: #bdbdbd; /* light grey */
    line-height: 1.6;
    margin-bottom: 2.5rem;
    letter-spacing: 0.3px;
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 300;
  }

  .cta-container {
    display: flex;
    gap: 1.5rem;
  }

  .cta-primary, .cta-secondary {
    padding: 1rem 2rem;
    border-radius: 4px;
    font-weight: 400;
    transition: all 0.3s ease;
    text-decoration: none;
    letter-spacing: 0.5px;
    background: #333333; /* dark grey background */
    color: #e0e0e0; /* light grey text */
    border: 2px solid #ff8c00; /* orange outline */
    font-family: 'Space Grotesk', sans-serif;
  }

  .cta-primary:hover, .cta-secondary:hover {
    background: #404040;
    box-shadow: 0 0 20px rgba(255, 140, 0, 0.2);
  }

  .form-content {
    background: #1a1a1a;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  }

  .form-title {
    font-size: 2rem;
    color: #ff8c00;
    margin-bottom: 1rem;
  }

  .idea-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-input, .form-textarea {
    padding: 0.75rem;
    border-radius: 4px;
    border: 1px solid #404040;
    background: #404040; /* mid grey */
    color: #e0e0e0; /* light grey text */
    font-family: 'Space Grotesk', sans-serif;
  }

  .form-input::placeholder, .form-textarea::placeholder {
    color: #bdbdbd; /* light grey placeholder */
  }

  .form-input:focus, .form-textarea:focus {
    outline: none;
    border-color: #ff8c00;
    box-shadow: 0 0 10px rgba(255, 140, 0, 0.2);
  }

  .form-button {
    padding: 1rem;
    border-radius: 4px;
    background: #ff8c00;
    color: #fff;
    border: none;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 0 10px rgba(255, 140, 0, 0.5);
  }

  .form-button:hover {
    background: #ffb347;
    box-shadow: 0 0 20px rgba(255, 179, 71, 0.5);
  }

  @media (max-width: 768px) {
    .content-grid {
      grid-template-columns: 1fr;
      margin-left: 0;
    }
  }

  .services-section {
    padding: 2rem;
    margin-top: 0;
    background-color: #1a1a1a;
  }

  .services-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2.5rem;
    color: #e0e0e0;
    margin-bottom: 2rem;
    opacity: 0.8;
    text-align: center;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    background-color: #1a1a1a;
    border: 1px solid #333;
    border-radius: 8px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    opacity: 1;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #ff8c00, transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  .service-card:hover::before {
    opacity: 1;
  }

  .card-icon {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .service-card h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    color: #e0e0e0;
    margin-bottom: 1rem;
  }

  .service-card p {
    font-family: 'Space Grotesk', sans-serif;
    color: #bdbdbd;
    line-height: 1.6;
    font-size: 1rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      padding: 0 1rem;
    }

    .services-section {
      padding: 1rem;
    }

    .services-title {
      font-size: 2rem;
    }
  }

  /* Add subtle orange glow on all edges when hovering */
  .service-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 1px solid transparent;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .service-card:hover::after {
    border-color: #ff8c00;
    box-shadow: 0 0 15px rgba(255, 140, 0, 0.1);
  }

  /* Update the services section and any container that might be causing the purple background */
  .services,
  .services-grid,
  .service-card,
  /* Add any parent containers that might be affecting the background */
  section {
    background-color: #1a1a1a;
  }

  /* If there's a specific container causing the purple background, you might need to target it directly */
  .services-container,
  .background-wrapper,
  .content-wrapper {
    background-color: #1a1a1a;
  }

  /* Ensure the cards maintain their styling but with correct background */
  .service-card {
    background-color: #1a1a1a;
    border: 1px solid #333;
    /* Rest of your card styling */
  }

  /* Remove any background gradients or colors that might be causing the purple tint */
  * {
    background-image: none;
  }

  .tech-stack {
    margin: 6rem 0;
    padding: 3rem 0;
    background: #1a1a1a;
    overflow: hidden;
  }

  .tech-stack h2 {
    text-align: center;
    font-size: 2.5rem;
    color: #ff8c00;
    margin-bottom: 3rem;
  }

  .tech-banner {
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .banner-track {
    display: flex;
    animation: scroll 40s linear infinite;
    width: fit-content;
  }

  .banner-content {
    display: flex;
    gap: 6rem;
    padding: 2rem;
    align-items: center;
  }

  .tech-item {
    flex-shrink: 0;
  }

  .tech-item img {
    width: 150px;
    height: 70px;
    object-fit: contain;
    filter: grayscale(100%) brightness(1.5);
    transition: filter 0.3s ease;
  }

  .tech-item:hover img {
    filter: grayscale(0%);
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%); /* Move by half to create seamless loop */
    }
  }

  /* Pause animation on hover */
  .banner-track:hover {
    animation-play-state: paused;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .banner-content {
      gap: 4rem;
    }
    
    .tech-item img {
      width: 120px;
      height: 56px;
    }
  }
</style>

<script>
  const track = document.querySelector('.carousel-track') as HTMLElement;
  const cards = document.querySelectorAll('.carousel-card') as NodeListOf<HTMLElement>;
  
  if (track && cards.length > 0) {
    const cardWidth = cards[0].offsetWidth + 32;
    track.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
  }
</script>