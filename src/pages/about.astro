---
import MainLayout from '../layouts/MainLayout.astro';

const workHistory = [
  {
    role: 'Managing Director',
    company: 'Novus Web - Coventry',
    period: '01/2023 - Present',
    description: 'Leading web design, development, and SaaS projects from conception to delivery. Specializing in creating fast, reliable websites focused on engagement and conversions. Working directly with clients to deliver practical, effective solutions using cutting-edge technologies.'
  },
  {
    role: 'VP of Creative Solutions',
    company: 'South Fulton Recording Studio - Tennessee',
    period: '05/2022 - 12/2023',
    description: 'Led remote team development of a music-focused SaaS platform. Utilized Notion, Jira, Confluence, Bitbucket, and AWS services. Enhanced skills in team collaboration and project management.'
  },
  {
    role: 'Web Developer',
    company: 'WEBSETH LTD - Coventry',
    period: '08/2016 - 12/2022',
    description: 'Operated own web development business, specializing in WordPress customization and development. Managed client relationships and delivered solutions exceeding expectations.'
  },
  {
    role: 'Ethical Hacking - Bug Bounty',
    company: 'Bugcrowd',
    period: '02/2011 - 01/2015',
    description: 'Identified and reported security vulnerabilities for major platforms including Spotify, Opera, PayPal, and Yahoo. Conducted zero-day research and suggested security improvements.'
  },
  {
    role: 'HPC Solution Technician',
    company: 'Foxconn CZ s.r.o.',
    period: '03/2013 - 12/2014',
    description: 'Managed HPC solutions for Microsoft Azure, Facebook, and Airbus. Handled cluster performance, network services, and system resources optimization.'
  }
];

const skills = [
  {
    category: 'Technical Skills',
    items: [
      'Web Development & Design',
      'Backend Development',
      'SaaS Development',
      'Linux Servers',
      'Network Setup and Maintenance'
    ]
  },
  {
    category: 'Professional Skills',
    items: [
      'Digital Marketing',
      'Leadership & Collaboration',
      'Strategic Thinking',
      'Problem Solving',
      'Technical Writing'
    ]
  }
];
---

<MainLayout title="About Adrian Birsan - Digital Entrepreneur & Developer" description="Learn about Adrian Birsan's journey in software engineering and digital marketing">
  <main class="about-container">
    <section class="hero-section">
      <h1>About Me</h1>
      <div class="personal-statement">
        <p>
          Entrepreneur and business owner with a strong foundation in software engineering and digital marketing, 
          focused on helping small businesses grow through smart, effective digital strategies at Novus Web Digital Agency.
        </p>
        <p>
          Along the way, I've learned a lot—sometimes through the hard lessons of five previous ventures that didn't go 
          as planned. Those experiences shaped my approach, making me more resilient and adaptable, and fueling my 
          drive to create impactful solutions for clients.
        </p>
        <p>
          Beyond work, I'm a guitar enthusiast and always on the lookout for ways to blend my personal passions with 
          my professional life, staying curious and ready for what's next.
        </p>
      </div>
    </section>

    <div class="content-grid">
      <section class="experience-section">
        <h2>Professional Journey</h2>
        <div class="timeline">
          {workHistory.map(job => (
            <div class="timeline-item">
              <div class="timeline-header">
                <h3>{job.role}</h3>
                <span class="period">{job.period}</span>
              </div>
              <div class="company">{job.company}</div>
              <p>{job.description}</p>
            </div>
          ))}
        </div>
      </section>

      <section class="skills-section">
        <h2>Skills & Expertise</h2>
        <div class="skills-grid">
          {skills.map(category => (
            <div class="skill-category">
              <h3>{category.category}</h3>
              <ul>
                {category.items.map(item => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          ))}
          <div class="video-card">
            <h3></h3>
            <div class="video-wrapper">
              <video controls class="guitar-video">
                <source src="/guitar1.mp4" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</MainLayout>

<style>
  .about-container {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    color: #e0e0e0;
  }

  h1 {
    font-size: 3rem;
    color: #ff8c00;
    margin-bottom: 2rem;
    text-align: center;
  }

  .personal-statement {
    max-width: 800px;
    margin: 0 auto 4rem;
    line-height: 1.6;
    font-size: 1.1rem;
    color: #bdbdbd;
  }

  .personal-statement p {
    margin-bottom: 1.5rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 4rem;
  }

  h2 {
    font-size: 2rem;
    color: #ff8c00;
    margin-bottom: 2rem;
  }

  .timeline-item {
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease;
  }

  .timeline-item:hover {
    transform: translateY(-5px);
    border-color: #ff8c00;
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .period {
    color: #ff8c00;
    font-size: 0.9rem;
  }

  .company {
    color: #bdbdbd;
    margin-bottom: 1rem;
  }

  .skills-grid {
    display: grid;
    gap: 2rem;
  }

  .skill-category {
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 8px;
    padding: 1.5rem;
    transition: transform 0.3s ease;
  }

  .skill-category:hover {
    transform: translateY(-5px);
    border-color: #ff8c00;
  }

  .skill-category h3 {
    color: #ff8c00;
    margin-bottom: 1rem;
  }

  .skill-category ul {
    list-style: none;
    padding: 0;
  }

  .skill-category li {
    margin-bottom: 0.5rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .skill-category li:before {
    content: "→";
    position: absolute;
    left: 0;
    color: #ff8c00;
  }

  .video-card {
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 8px;
    padding: 1.5rem;
    transition: transform 0.3s ease;
  }

  .video-card:hover {
    transform: translateY(-5px);
    border-color: #ff8c00;
  }

  .video-wrapper {
    width: 100%;
    max-width: 400px;
    margin: 1rem auto 0;
  }

  .guitar-video {
    width: 100%;
    border-radius: 4px;
    aspect-ratio: 16/9;
  }

  @media (max-width: 968px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
